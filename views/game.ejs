<!-- To include header.ejs -->
<%- include ("./partials/header", { showHeader: false }) %>


<div class="container">
  <div id="loader">
    <h1>LOADING...</h1>
  </div>
  <div id="game" class="justify-center flex-column">
    <div id="hud">
      <div id="hud-item">
        <p id="progress-text" class="hud-prefix">
          q uestion
        </p>
        <div id="progress-bar">
          <div id="progressBarFull"></div>
        </div>
      </div>
      <div id="hud-item">
        <p class="hud-prefix">
          score
        </p>
        <h1 class="hud-main-text" id="score">0</h1>
      </div>
    </div>
    <h2 id="question">
      What is answer to question?
    </h2>
    <div class="choice-container">
      <p class="choice-prefix">A</p>
      <p class="choice-text" data-number="1">choice 1</p>
    </div>
    <div class="choice-container">
      <p class="choice-prefix">B</p>
      <p class="choice-text" data-number="2">choice 2</p>
    </div>
    <div class="choice-container">
      <p class="choice-prefix">C</p>
      <p class="choice-text" data-number="3">choice 3</p>
    </div>
    <div class="choice-container">
      <p class="choice-prefix">D</p>
      <p class="choice-text" data-number="4">choice 4</p>
    </div>
    
  </div>
</div>

<div><div id="loader-script"></div></div>
<script src="/js/link.js"></script>
<script>
  var script = document.createElement("SCRIPT");
  script.src =
    "/course/" +
    params.course +
    "/" +
    params.level +
    "/" +
    params.diff +
    "/questions.js";
  var loader = document.getElementById("loader-script");
  loader.parentNode.insertBefore(script, loader);
</script>
<script src="/js/game.js"></script>

<!-- To include footer.ejs -->
<%- include ("./partials/footer") %>
